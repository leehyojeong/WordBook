<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".meaning"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="#d87959">
        <Space android:layout_height="40dp"
               android:layout_width="0dp"
               android:layout_weight="0.5"/>
        <Button
                android:id="@+id/topmenu"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="0.7"
                android:background="@drawable/menu_btn"/>
        <Space android:layout_height="40dp"
               android:layout_width="0dp"
               android:layout_weight="2"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="뜻 맞추기"
                android:textSize="35dp"
                android:fontFamily="@font/hoont"
                android:textColor="#fffff9"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="80dp">
        <TextView
                android:id="@+id/quiz_eng"
                android:layout_width="320dp"
                android:layout_height="145dp"
                android:textSize="50dp"
                android:text="영어 단어"
                android:fontFamily="@font/hoont"
                android:textColor="#3d454a"
                android:background="@drawable/quiz_back"
                android:gravity="center_horizontal"
                android:paddingTop="25dp"/>

         <ListView
                 android:id="@+id/answer_kor"
                 android:layout_width="match_parent"
                 android:layout_height="330dp"
                android:layout_marginTop="50dp"/>
    </LinearLayout>
</LinearLayout>